<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:paddingEnd="4dp"
    android:paddingBottom="8dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="16dp"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="16dp">

            <ImageView
                android:id="@+id/cartImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/cartTitleFlow"
                app:srcCompat="@drawable/ic_cart" />

            <TextView
                android:id="@+id/cartTitleTextView"
                style="@style/Text.Title.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/cart_title"
                app:layout_constraintStart_toEndOf="@id/cartImageView"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/totalPriceTextView"
                style="@style/Text.Title.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_price_title"
                app:layout_constraintEnd_toEndOf="@id/cartTitleFlow"
                tools:ignore="MissingConstraints"
                tools:text="Total: 324.35â‚¬" />

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/cartTitleFlow"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                app:constraint_referenced_ids="cartImageView, cartTitleTextView, totalPriceTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cartRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/seeAllButton"
                app:layout_constraintTop_toBottomOf="@id/cartTitleFlow"
                tools:itemCount="10"
                tools:listitem="@layout/item_cart_product" />

            <TextView
                android:id="@+id/seeAllButton"
                style="@style/Button.General"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/see_all_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cartRecyclerView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>